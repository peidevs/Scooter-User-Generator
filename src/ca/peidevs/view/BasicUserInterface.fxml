            <Button text="Get Attendees" GridPane.columnIndex="3" GridPane.rowIndex="1"></Button>

            <Text text="Event Name: " GridPane.columnIndex="0" GridPane.rowIndex="3"></Text>
            <Text text="" GridPane.columnIndex="1" GridPane.rowIndex="3"></Text>

            <Text text="Location: " GridPane.columnIndex="0" GridPane.rowIndex="4"></Text>
            <Text text="" GridPane.columnIndex="1" GridPane.rowIndex="4"></Text>

        </GridPane>
    </top>
