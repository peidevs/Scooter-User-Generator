<?import javafx.scene.text.*?>
<BorderPane>
    <padding>
        <Insets bottom="15" top="15" left="10" right="10"></Insets>
    </padding>
    <top>
        <GridPane hgap="5" vgap="10">
            <Text text="Group Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField GridPane.columnIndex="1" id="groupName" GridPane.rowIndex="0"></TextField>

            <Text text="Meetup Date" GridPane.columnIndex="2" GridPane.rowIndex="0"></Text>
            <DatePicker GridPane.columnIndex="3" GridPane.rowIndex="0">
                <!--meetupDate = new DatePicker(LocalDate.now());-->
